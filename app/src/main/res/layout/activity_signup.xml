<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.SignupActivity"
    android:background="#1C1C23"
    android:paddingHorizontal="24dp"
    app:flexDirection="column"
    app:justifyContent="space_between"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="12dp"
            android:text="@string/judul"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginVertical="24dp"
            android:layout_gravity="center_horizontal"
            app:drawableStartCompat="@drawable/logo" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent">
            <TextView
                android:id="@+id/label_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/label_text_ph"
                android:textSize="@dimen/h4"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry"
                android:text="@string/fullname"
                android:textColor="@color/white"
                />
            <EditText
                android:id="@+id/input_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:inputType="textEmailAddress"
                android:background="@drawable/bg_input"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:padding="@dimen/input_p"
                android:layout_marginVertical="8dp"
                android:autofillHints="name"
                android:labelFor="@+id/label_email"
                android:hint="@string/hint_full_name"
                android:textColorHint="@color/silver"
                />
            <TextView
                android:id="@+id/label_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/label_text_ph"
                android:textSize="@dimen/h4"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry"
                android:text="@string/email"
                android:textColor="@color/white"
                />
            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:inputType="textEmailAddress"
                android:background="@drawable/bg_input"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:padding="@dimen/input_p"
                android:layout_marginVertical="8dp"
                android:autofillHints="emailAddress"
                android:labelFor="@+id/label_email"
                android:hint="@string/hint_email"
                android:textColorHint="@color/silver"
                />
            <TextView
                android:id="@+id/label_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/label_text_ph"
                android:textColor="@color/white"
                android:textSize="@dimen/h4"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry"
                android:text="@string/password"
                android:layout_marginTop="8dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                />
            <EditText
                android:id="@+id/input_password"
                android:background="@drawable/bg_input"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:padding="@dimen/input_p"
                android:layout_marginVertical="8dp"
                android:autofillHints="password"
                android:labelFor="@+id/label_password"
                android:hint="@string/hint_password"
                android:textColorHint="@color/silver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/label_re_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/label_text_ph"
                android:textColor="@color/white"
                android:textSize="@dimen/h4"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry"
                android:text="@string/password"
                android:layout_marginTop="8dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                />
            <EditText
                android:id="@+id/input_re_password"
                android:background="@drawable/bg_input"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:padding="@dimen/input_p"
                android:layout_marginVertical="8dp"
                android:autofillHints="password"
                android:labelFor="@+id/label_password"
                android:hint="@string/hint_repassword"
                android:textColorHint="@color/silver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/label_text_ph"
                tools:ignore="RtlSymmetry"
                android:layout_gravity="center"
                android:textSize="@dimen/h4"
                android:text="@string/pass_terms"
                android:layout_marginVertical="8dp"
                android:textColor="@color/white"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@id/button_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button"
                android:backgroundTint="@color/button_primary"
                android:padding="@dimen/btn_p"
                android:textSize="@dimen/btn_text_size"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:text="@string/sign_up" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/label_text_ph"
                android:textSize="@dimen/h4"
                tools:ignore="RtlSymmetry"
                android:text="@string/or"
                android:textColor="@color/white"
                android:layout_marginVertical="12dp"
                android:layout_gravity="center"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button"
                android:backgroundTint="@color/white"
                android:padding="@dimen/btn_p"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/btn_text_size"
                android:textStyle="bold"
                android:text="@string/sign_up_with_google" />
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/label_text_ph"
            tools:ignore="RtlSymmetry"
            android:layout_marginVertical="12dp"
            android:layout_gravity="center"
            android:textSize="@dimen/h4"

            android:text="@string/ask_account"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:padding="@dimen/btn_p"
            android:textSize="@dimen/btn_text_size"
            android:id="@+id/button_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:text="@string/btn_signin"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray"
            android:layout_marginBottom="24dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            />
    </LinearLayout>
</com.google.android.flexbox.FlexboxLayout>